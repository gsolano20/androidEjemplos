<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMainActivity"
    tools:context=".MainActivity">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webViewUrl"
        app:layout_constraintStart_toStartOf="@+id/layoutMainActivity"
        app:layout_constraintEnd_toEndOf="@+id/layoutMainActivity">
    </WebView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgConexion"
        android:src="@drawable/no_connection"
        app:layout_constraintStart_toStartOf="@+id/layoutMainActivity"
        app:layout_constraintEnd_toEndOf="@+id/layoutMainActivity"
        app:layout_constraintTop_toTopOf="@+id/layoutMainActivity"
        app:layout_constraintBottom_toBottomOf="@+id/layoutMainActivity">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVMsjCon"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/msjCon"
        android:layout_marginTop="20dp"
        android:textSize="45sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/layoutMainActivity"
        app:layout_constraintEnd_toEndOf="@+id/layoutMainActivity"
        app:layout_constraintTop_toBottomOf="@+id/imgConexion"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVMsjConnection"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/msjConnection"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="@+id/layoutMainActivity"
        app:layout_constraintEnd_toEndOf="@+id/layoutMainActivity"
        app:layout_constraintTop_toBottomOf="@+id/tVMsjCon"/>

</androidx.constraintlayout.widget.ConstraintLayout>